<phpunit bootstrap="vendor/autoload.php" cacheResult="false">
	<testsuites>
		<testsuite name="app">
			<directory>test</directory>
		</testsuite>
	</testsuites>
	<php>
		<env name="APP_ENV" value="test"/>
	</php>
	<coverage processUncoveredFiles="true">
		<include>
			<directory suffix=".php">component</directory>
		</include>
	</coverage>
</phpunit>